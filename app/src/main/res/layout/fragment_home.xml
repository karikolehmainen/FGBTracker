<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:screenOrientation="landscape"
    tools:context="com.example.fgbtracker.ui.home.HomeFragment">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:screenOrientation="landscape"
        android:columnCount="3">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/situmap"
            android:name="com.example.fgbtracker.ui.maps.MapsFragment"
            tools:context="com.example.fgbtracker.MapsActivity"
            android:layout_width="1300px"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/followme_btn"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="70dp"
            android:minHeight="70dp"
            android:text="Start" />
        <Button
            android:id="@+id/takeoff_btn"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="70dp"
            android:minHeight="70dp"
            android:text="Take Off" />
        <Button
            android:id="@+id/stopfollowme_btn"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="70dp"
            android:minHeight="70dp"
            android:text="Stop" />
        <Button
            android:id="@+id/land_btn"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="70dp"
            android:minHeight="70dp"
            android:text="Land" />
        <TextView
            android:id="@+id/text_battery"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/textbg"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="55dp"
            android:minHeight="55dp"
            android:layout_column="0"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_altitude"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:background="@color/textbg"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="55dp"
            android:minHeight="55dp"
            android:layout_column="2"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_delta"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:background="@color/textbg"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="55dp"
            android:minHeight="55dp"
            android:layout_column="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_recording_home"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:background="@color/textbg"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:maxHeight="55dp"
            android:minHeight="55dp"
            android:layout_column="2"
            android:textSize="20sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>